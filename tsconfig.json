{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": [],
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "declarationDir": "dist",
    "preserveValueImports": false,
    "isolatedModules": false,
    "ignoreDeprecations": "5.0"
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*"
  ]
}
